{
    "name": "nody-ecommerce",
    "version": "1.0.0",
    "description": "Plateforme e-commerce de mode moderne",
    "main": "server/server.js",
    "scripts": {
        "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
        "server:dev": "cd server && npm run dev",
        "client:dev": "cd client && npm run dev",
        "build": "cd client && npm run build",
        "start": "cd server && npm start",
        "install-deps": "cd server && npm install && cd ../client && npm install",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss}\""
    },
    "keywords": [
        "ecommerce",
        "mode",
        "mern",
        "react",
        "nodejs"
    ],
    "author": "NDOUYI Harley Fedy",
    "license": "MIT",
    "devDependencies": {
        "concurrently": "^8.2.2",
        "prettier": "^3.6.2"
    }
}
